    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}</directory>

            <excludes>
                <exclude>**/target/**</exclude>
            </excludes>

            <includes>
                <include>DISCLAIMER</include>
                <include>NOTICE</include>
                <include>LICENSE</include>
            </includes>
